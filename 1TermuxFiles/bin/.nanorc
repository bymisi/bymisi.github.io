#syntax extension
syntax "conf" "\.(c(onf|nf|fg))$"
color cyan "[0-9.KM]"
color green "[a-z.KM]"
color green "[A-Z.KM]"
color green "[é,è,ù,ü,ú,ű,ì,í,ò,ő,ö,ó,á,à]"
color green "[È,É,Ù,Ü,Ú,Ű,Ì,Í,Ò,Ő,Ö,Ó,Á,À]"
# comment
color blue start="#" end="$"
#---------------------------------
set titlecolor blue,yellow
set keycolor green,blue
set functioncolor green,normal
set numbercolor green,magenta
set errorcolor green,red
set selectedcolor yellow,blue
set stripecolor blue,green
set statuscolor brown,green
#---------------------------------
set linenumbers
set mouse
set softwrap
set tabstospaces
#set smooth
#set tabsize 4
